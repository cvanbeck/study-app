<head>
    <link rel="stylesheet" type="text/css" href="/css/notes/notesPage.css" />
</head>

<div class="container mt-4 notes-container">
    <div class="header-section d-flex justify-content-between align-items-center">
        <h2>Collaborative Notes</h2>
        <div class="session-info">
            <span class="text-muted">Session Code:</span>
            <span id="sessionCode" class="badge bg-primary session-badge">N/A</span>
        </div>
    </div>

<!-- Row 1 -->
<div class="row">
    <!-- Left side: New Note, Load Note -->
    <div class="col-12 col-md-6">
      <div class="d-flex flex-column flex-md-row gap-2">
        <button id="newNoteButton" class="btn btn-primary flex-fill flex-md-grow-0">New Note</button>
        <button id="loadNoteButton" class="btn btn-outline-primary flex-fill flex-md-grow-0">Load Note</button>
      </div>
    </div>
    <!-- Right side: Join Collab Session, Create Collab Session -->
    <div class="col-12 col-md-6">
      <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end">
        <button id="joinButton" class="btn btn-success flex-fill flex-md-grow-0">Join Collab Session</button>
        <button id="sessionButton" class="btn btn-outline-success flex-fill flex-md-grow-0">Create Collab Session</button>
      </div>
    </div>
  </div>
  
  <!-- Row 2 -->
  <div class="row mt-3">
    <!-- Left side: Version control buttons -->
    <div class="col-12 col-md-6">
      <div class="d-flex flex-column flex-md-row gap-2">
        <button id="versionControlAlertButton" class="btn btn-sm btn-outline-secondary flex-fill flex-md-grow-0">View Version</button>
        <button id="currentNoteButton" class="btn btn-sm btn-outline-secondary flex-fill flex-md-grow-0">Return to Current</button>
        <button id="deleteAlertButton" class="btn btn-sm btn-outline-danger flex-fill flex-md-grow-0">Delete Version</button>
      </div>
    </div>
    <!-- Right side: End Session button -->
    <div class="col-12 col-md-6">
      <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end">
        <button id="endSessionButton" class="btn btn-sm btn-outline-danger flex-fill flex-md-grow-0">End Session</button>
      </div>
    </div>
  </div>
  

    <!-- Editor Container -->
    <div class="quill-container editor-overlay mt-3">
        <div id="editor"></div>
        <!-- This is the partial note.ejs that contains the overlay -->
        <div class="editor-blur" id="editorOverlay">
            <p class="blur-message">No note selected</p>
            <div class="d-grid gap-2 d-md-block">
                <button id="newNoteOverlayButton" class="btn btn-primary">New Note</button>
                <button id="loadNoteOverlayButton" class="btn btn-outline-primary">Load Note</button>
            </div>
        </div>
    </div>
</div>

<!-- Passes the below content to the scripts variable in layout.ejs -->
<%- contentFor('scripts') %>

<%- include('../notes/partials/note.ejs') %>

<script>
    // Call this on page load
    appendToHeading('Notes');
</script>